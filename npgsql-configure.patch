diff -Nur npgsql-3.1.3.orig/Makefile npgsql-3.1.3/Makefile
--- npgsql-3.1.3.orig/Makefile	1970-01-01 01:00:00.000000000 +0100
+++ npgsql-3.1.3/Makefile	2016-06-15 15:21:09.525171411 +0200
@@ -0,0 +1,15 @@
+apiversion = 3.0.0.0
+
+all:
+	sed -i -e 's!AssemblyVersion(".*")!AssemblyVersion("$(apiversion)")!g' src/CommonAssemblyInfo.cs
+	sed -i -e 's!AssemblyFileVersion(".*")!AssemblyFileVersion("$(apiversion)")!g' src/CommonAssemblyInfo.cs
+	sed -i -e 's!AssemblyInformationalVersion(".*")!AssemblyInformationalVersion("$(apiversion)")!g' src/CommonAssemblyInfo.cs
+	cd src/Npgsql ; xbuild /tv:4.0 /property:Configuration='Release' Npgsql.csproj
+
+install:
+	install -d -m 755 /usr/lib
+	install -m 644 src/Npgsql/obj/Release/Npgsql.dll /usr/lib
+	install -m 644 src/Npgsql/obj/Release/Npgsql.dll.mdb /usr/lib
+	install -d -m 755 /usr/share/pkgconfig/
+	install -m 644 Npgsql.pc /usr/share/pkgconfig/
+
diff -Nur npgsql-3.1.3.orig/Npgsql.pc npgsql-3.1.3/Npgsql.pc
--- npgsql-3.1.3.orig/Npgsql.pc	1970-01-01 01:00:00.000000000 +0100
